{% extends 'adminbase.html.twig' %}
{% block title %} Kategori Listesi {% endblock %}
{% block content %}
<div class="panel panel-default">
    <div class="panel-heading">
        <b>Kategori Listesi</b>
    </div>
    <small><a href="{{ path('admin_category_new') }}" class="btn btn-warning" >Yeni Kategori Ekle</a></small>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Parentid</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Status</th>
                <th>Göster</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.parentid }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.status }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}"class="btn btn-info">Göster</a>
                 </td>
                <td>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}"class="btn btn-primary">Düzenle</a>
                </td>
                <td>
                    <a href="{{ path('admin_category_delete', {'id': category.id}) }}"class="btn btn-danger">Sil</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



        </div>
{% endblock %}