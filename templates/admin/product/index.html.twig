{% extends 'adminbase.html.twig' %}

{% block title %} Product Listesi {% endblock %}
{% block content %}
<div class="panel panel-default">
    <div class="panel-heading">
        <b>Product  Listesi</b>
    </div>
    <small><a href="{{ path('admin_product_new') }}" class="btn btn-success" >Yeni Product Ekle</a></small>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Amount</th>
                <th>Pprice</th>
                <th>Sprice</th>
                <th>Min</th>
                <th>Image</th>
                <th>Galery</th>
                <th>Category_id</th>
                <th>User id</th>
                <th>Status</th>
                <th>Göster</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.amount }}</td>
                <td>{{ product.pprice }}</td>
                <td>{{ product.sprice }}</td>
                <td>{{ product.min }}</td>
                <td>
                    <a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                    {% if product.image==null %}
                    <img src="{{ url ('admin') }}/img/image.png" height="32" >
                    {% else %}
                        <img src="{{ asset ('uploads') }}/images/{{ product.image }}" height="40">

                        {% endif %}
                    </a>
                </td>

                <td>
                    <a href="javascript:openWin('{{ path('admin_image_new', {'pid': product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                    <img src="{{ url ('admin') }}/img/gallery.png" height="32" >
                    </a>
                </td>

                <td>{{ product.categoryId }}</td>
                <td>{{ product.userid }}</td>
                <td>{{ product.status }}</td>

                <td>
                    <a href="{{ path('admin_product_show', {'id': product.id}) }}"class="btn btn-info">Göster</a>
                </td>
                <td>
                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}"class="btn btn-primary">Düzenle</a>
                </td>
                <td>
                    <a href="{{ path('admin_product_delete', {'id': product.id}) }}"class="btn btn-danger">Sil</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div></div></div>
    <a href="{{ path('admin_product_new') }}">Create new</a>
{% endblock %}
