{% extends 'adminbase.html.twig' %}

{% block title %} Üye Ekleme {% endblock %}

 {% block content %}


     <form role="form"  method="post">
         <h3>Yeni Üye Ekleme</h3>
         <div class="form-group has-success">

             <label class="text-success" for="inputSuccess">Adı Soyadı</label>
             <input type="text" name="user[name]" class="col-sm-5" placeholder="Adı Soyadı" id="inputSuccess">
         </div>
         <div class="form-group has-success">

             <label class="text-danger" for="inputSuccess">Email</label>
             <input type="email"  name="user[email]" class="col-sm-5" placeholder="Email" id="inputSuccess">
         </div>
         <div class="form-group has-warning">
             <label class="p-3 mb-2 bg-dark text-white" for="inputWarning">Password</label>
             <input type="password"  name="user[password]" class="col-sm-5" placeholder="Password" id="inputWarning">
         </div>

         <div class="form-group has-error">
             <label class="p-3 mb-2 bg-dark text-white" for="inputError">Türü</label>
             <select  name="user[roles]" class="col-sm-5">
                 <option>ROLE_ADMIN</option>
                 <option>ROLE_USER</option>
                 <option>ROLE_POWER</option>
                 <option>ROLE_MEMBER</option>
             </select>
         </div>
         <div class="form-group has-error">
             <label class="p-3 mb-2 bg-dark text-white" for="inputError">Aktif Durumu</label>
             <select  name="user[status] " class="col-sm-5">
                 <option>True</option>
                 <option>False</option>

             </select>
         </div>
         <div class="form-group has-success">

             <button type="submit" class="btn btn-success">İptal</button>
             <button type="submit" class="btn btn-info pull-right" style="margin-right:850px">Ekle</button>
         </div>
     </form>

 {% endblock %}



