{% extends 'frontbase.html.twig' %}

{% block title %} İletişim Sayfamız{% endblock %}
{% block keywords %}{{ data[0].keywords }}{% endblock %}
{% block description %}{{ data[0].description }}{% endblock %}
{% block content %}
<div id="wrapper">
        <div id="content">
               <p>
                   {{ data[0].aboutus|raw }}
               </p>
        </div>
</div>

    <div class="login-form"><!--login form-->
        <h2><b>Bize Ulaşın</b></h2>
        {{ include('messages.html.twig') }}

        <form  method="post">
            <input type="text" name="messages[name]" placeholder="name">
            <input type="email"name="messages[email]"  placeholder="Email">
            <input type="text" name="messages[subject]"  placeholder="subject">
            <textarea rows="3" type="text" name="messages[messages]"  placeholder="message"></textarea>

            <input type="hidden" name="token" value="{{ csrf_token('form-message') }} "/>
            <button type="submit"  class="btn btn-default">Gönder</button>
        </form>
    </div>

{% endblock %}
